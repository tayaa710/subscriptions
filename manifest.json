{
  "manifest_version": 3,
  "name": "Subscription Sentinel",
  "description": "Detects subscription and free trial terms during checkout and schedules reminders before renewals.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
